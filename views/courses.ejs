<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Courses</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-left">
            <h2><%= student_name %></h2>
        </div>
        <nav class="header-right">
            <a href="/student/<%= student_name %>">Home</a>
            <a href="/student/<%= student_name %>/courses">Available courses</a>
            <a href="/student/<%= student_name %>/req_course_stu">Requested courses</a>
            
            <!-- Logout Form -->
            <form action="/logout" method="post" style="display: inline;">
                <button type="submit" class="logout-button">‚èª</button>
            </form>
        </nav>
    </header>

    <!-- Courses Section -->
    <main class="courses-section">
        <% if (courses.length === 0) { %>
            <p class="no-courses">No courses available.</p>
        <% } else { %>
            <div class="courses-container">
                <% courses.forEach(function(course) { %>
                    <div class="course-tile">
                        <div class="course-title">
                            <h2><%= course.courseName %></h2>
                        </div>
                        <p><strong>Department:</strong> <%= course.department %></p>
                        <p><strong>Code:</strong> <%= course.courseCode %></p>
                        <p><strong>Description:</strong> <%= course.description %></p>
                        <!-- Enroll Button -->
                        <form action="/student/<%= student_name %>/enroll" method="post" class="enroll-form">
                            <input type="hidden" name="courseName" value="<%= course.courseName %>">
                            <input type="hidden" name="department" value="<%= course.department %>">
                            <input type="hidden" name="courseCode" value="<%= course.courseCode %>">
                            <input type="hidden" name="description" value="<%= course.description %>">
                            <button type="submit" class="btn enroll-btn">Enroll</button>
                        </form>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 University Portal. All rights reserved.</p>
    </footer>
</body>
</html>
